#include<bits/stdc++.h>
using namespace std;
int solve(int *a,int n,int par,int mid){
    int time = 0;
    int paratha = 0;
    for(int i=0;i<n;i++){
        time = a[i];
        int j =2;
        while(time<=mid){
            paratha++;
            time += (a[i]*j);
            j++;
        }
        if(paratha>=par) return 1;
    }
    return 0;
}
int main(){
    int t;
    cin>>t;
    while(t--){
    int par;
    cin>>par;
    int n;
    cin>>n;
    int a[n];
    for(int i=0;i<n;i++) cin>>a[i];
    sort(a,a+n);
    int lb = 1;
    int ub =1e8;
    int ans= 0;
    while(lb<=ub){
        int mid = (lb + ub)/2;
        int cow=1;
        int prev = a[0];
            if(solve(a,n,par,mid)){
                ans = mid;
                ub = mid -1;
            }
            else
            lb = mid+1;
    }
cout<<ans<<endl;
}
return 0;
}
